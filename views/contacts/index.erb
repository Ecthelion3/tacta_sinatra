<h2>Contacts</h2>

<% @contacts.each_with_index do |contact, i| %>
  <h3><a href="/contacts/<%= i %>"><%= contact[:name] %></a></h3>
<% end %>

<p>
  <button><a href="/contacts/new">New</a></button>
  <button><a href="/contacts">Index</a></button>
</p>
<p>
  <form action="/contacts/search" method="POST">
    <input type="text" name="query" value="<%= params[:query] %>">
    <input type="submit" value="Search">
  </form>
</p>
